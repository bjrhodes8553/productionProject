<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>


<!--suppress ALL -->
<GridPane alignment="CENTER" styleClass="parent-grid-pane" xmlns="http://javafx.com/javafx/11.0.1"
  xmlns:fx="http://javafx.com/fxml/1" fx:controller="production.Controller">
  <stylesheets>
    <String fx:value="/production/productStyle.css"/>
  </stylesheets>

  <columnConstraints>
    <ColumnConstraints/>
  </columnConstraints>
  <rowConstraints>
    <RowConstraints/>
  </rowConstraints>
  <padding>
    <Insets bottom="25.0" left="25.0" right="25.0" top="25.0"/>
  </padding>
  <opaqueInsets>
    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
  </opaqueInsets>
  <cursor>
    <Cursor fx:constant="OPEN_HAND"/>
  </cursor>
  <TabPane stylesheets="@productStyle.css" tabClosingPolicy="UNAVAILABLE">
    <tabs>
      <Tab styleClass="product-tab" text="Product Line">
        <content>
          <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
            <children>
              <AnchorPane blendMode="SRC_ATOP" layoutX="-1.0" prefHeight="172.0" prefWidth="266.4"
                AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                <children>
                  <GridPane hgap="10.0" layoutX="17.0" layoutY="1.0" prefHeight="73.0"
                    prefWidth="229.0" vgap="10.0">
                    <columnConstraints>
                      <ColumnConstraints/>
                      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                    </columnConstraints>
                    <rowConstraints>
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <children>
                      <Label text="Product Name:"/>
                      <Label text="Manufacturer:" GridPane.rowIndex="1"/>
                      <TextField fx:id="productNameTxtBox" onMouseEntered="#getProductName"
                        GridPane.columnIndex="1"/>
                      <TextField fx:id="maunfacturerTxtBox" onMouseEntered="#getManufacturer"
                        GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                      <Label text="Type:" GridPane.rowIndex="2"/>
                      <!--suppress JavaFxUnresolvedStyleClassReference -->
                      <ChoiceBox fx:id="typeChoicebox" onContextMenuRequested="#display_types"
                        onMouseClicked="#getType" prefWidth="150.0" styleClass="type-choice-box"
                        stylesheets="@productStyle.css" GridPane.columnIndex="1"
                        GridPane.rowIndex="2"/>
                    </children>
                    <padding>
                      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                  </GridPane>
                  <!--suppress JavaFxUnresolvedStyleClassReference -->
                  <Button fx:id="addProductBtn" layoutX="14.0" layoutY="75.0"
                    mnemonicParsing="false" onMouseClicked="#add_product"
                    styleClass="add-product-button" stylesheets="@productStyle.css"
                    text="Add Product" textFill="#392085"/>
                  <TableView layoutX="8.0" layoutY="105.0" prefHeight="67.0" prefWidth="242.0">
                    <columns>
                      <TableColumn fx:id="existingProducts" onEditCommit="#display_products"
                        onEditStart="#input_products" prefWidth="240.00000476837158"
                        text="Existing Products"/>
                    </columns>
                  </TableView>
                </children>
                <padding>
                  <Insets bottom="25.0" left="25.0" right="25.0" top="25.0"/>
                </padding>
              </AnchorPane>
            </children>
          </AnchorPane>
        </content>
      </Tab>
      <Tab styleClass="produce-tab" text="Produce">
        <content>
          <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
            <children>
              <AnchorPane layoutX="7.0" layoutY="-15.0" prefHeight="200.0" prefWidth="250.0">
                <children>
                  <Label layoutX="3.0" layoutY="32.0" styleClass="product-label"
                    stylesheets="@productStyle.css" text="Choose Product:"/>
                  <ListView layoutX="4.0" layoutY="50.0" prefHeight="111.0" prefWidth="106.0"/>
                  <Label layoutX="128.0" layoutY="32.0" styleClass="quantity-label"
                    stylesheets="@productStyle.css" text="Choose Quantity:"/>
                  <ComboBox id="quantityChoice" layoutX="120.0" layoutY="50.0" prefHeight="18.0"
                    prefWidth="112.0" styleClass="choice-box" stylesheets="@productStyle.css"/>
                  <Button fx:id="recordProductionBtn" layoutX="118.0" layoutY="100.0"
                    mnemonicParsing="false" onMouseClicked="#record_production"
                    stylesheets="@productStyle.css" text="Record Production" textFill="#1a5710">
                    <effect>
                      <DropShadow color="#268723"/>
                    </effect>
                  </Button>
                </children>
              </AnchorPane>
            </children>
          </AnchorPane>
        </content>
      </Tab>
      <Tab styleClass="log-tab" text="Production Log">
        <content>
          <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
            <children>
              <TextArea layoutX="35.0" layoutY="47.0" prefHeight="120.0" prefWidth="194.0"/>
              <Label layoutX="90.0" layoutY="14.0" styleClass="log-label"
                stylesheets="@productStyle.css" text="Production Log:"/>
            </children>
          </AnchorPane>
        </content>
      </Tab>
    </tabs>
    <cursor>
      <Cursor fx:constant="HAND"/>
    </cursor>
  </TabPane>
</GridPane>
